@using Insurance.ViewModels
@model List<CustomerVm>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Quotes Issued</h5>
        </div>
        <div class="card-body">
            @foreach (var quotes in Model)
            {
                using (Html.BeginForm("CustomerVm", "Admin", FormMethod.Get))
                {
                    <input type="hidden" name="Id" value=@quotes.Id />
                    <div class="row mb-3">
                        <div class="col-2">
                            @quotes.FirstName
                        </div>
                        <div class="col">
                            @quotes.LastName
                        </div>
                        <div class="col-4">
                            @quotes.EmailAddress
                        </div>
                        <div class="col">
                            @quotes.Quote
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

